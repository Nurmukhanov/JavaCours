public class BeerSong
{
	public static void main(String[] args)
	{
		int beerNum = 5;
		String word = "Butylok (butylki) ";
		
		System.out.println(beerNum + " " + word + "piva.");
		System.out.println("Pusti po krugu");
		
		while (beerNum > 0)
		{
			if (beerNum == 1)
			{
				word ="butylka ";
				System.out.println(beerNum + " " + word + "piva na stene");
				System.out.println("Voz'mi Odnu");
			}
			beerNum = beerNum - 1;
			if (beerNum > 1)
			{
				System.out.println(beerNum + " " + word + "piva na stene");
				System.out.println("Pusti po krugu");
			}
			else if (beerNum == 0)
			{
				System.out.println("Net butylka piva na stene");
			}
		}

	}
}
